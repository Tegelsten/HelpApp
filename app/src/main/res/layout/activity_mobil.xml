<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:background="#5BAB14"
    tools:context="com.example.tegelsten.helpapp101.mobil">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="95dp"
        android:weightSum="1.0"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Problem"
            android:id="@+id/Problem"
            android:background="#1CD41C"
            android:layout_weight=".5"
            android:layout_marginRight="5dp"
            android:onClick="buttprobOnclick"
            android:textColor="#000000" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Tips"
            android:id="@+id/Tips"
            android:background="#1CD41C"
            android:textColor="#000000"
            android:layout_weight=".5"
            android:layout_marginLeft="5dp"
            android:onClick="buttTipsOnclick" />

    </LinearLayout>

    <FrameLayout
        android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="#000000"
        android:layout_gravity="center"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="50dp">

    </FrameLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/linearLayout2"
        android:id="@+id/RelLay"
        android:layout_weight="0.7"
        android:background="#006400"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:id="@+id/linnelayour"
            android:layout_centerVertical="true">


            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/list"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/RelLay"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linearLayout"
        android:background="#006400"
        android:layout_marginTop="30dp"
        android:id="@+id/ToppBar"></FrameLayout>

</RelativeLayout>


