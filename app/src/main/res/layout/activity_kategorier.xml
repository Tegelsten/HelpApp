<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:background="#5BAB14"
    tools:context="com.example.tegelsten.helpapp101.kategorier">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="95dp"
        android:weightSum="1.0"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Tips"
            android:id="@+id/button5"
            android:background="#FFFFFF"
            android:layout_weight=".5"
            android:layout_marginRight="5dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Problem"
            android:id="@+id/button6"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:layout_weight=".5"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <FrameLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:layout_gravity="center"
            android:id="@+id/linearLayout2"
            android:layout_below="@+id/linearLayout"
            android:layout_marginTop="50dp">

    </FrameLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/linearLayout2"
        android:id="@+id/RelLay"
        android:layout_weight="0.7"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:layout_centerVertical="true">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="button 1"
                android:id="@+id/button7" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/button8"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/button9"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/button10"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/button11"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="New ganja"
                android:id="@+id/button12"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Dick Button"
                android:id="@+id/button13"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Inte min button"
                android:id="@+id/button14"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/RelLay"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linearLayout"
        android:background="#000000"
        android:layout_marginTop="30dp"></FrameLayout>

</RelativeLayout>
